#!/usr/bin/env python3

import sys

# http://www.erinhengel.com/software/textatistic/ (source code
# available at https://github.com/erinhengel/Textatistic).  Also, the
# paper that motivated Erin Hengel to create Textastic is interesting
# in itself: http://www.erinhengel.com/research/publishing_female.pdf.
import textatistic

# We could also try http://flesh.sourceforge.net/index.html, but
# although it claims to be licensed under the GPL, I can't find source
# code anywhere.  It's also older than textastic, written in Java, and
# doesn't seem to have any public version controlled home online.

t = textatistic.Textatistic(sys.stdin.read())

print("%7.2f <= Flesch Reading Ease score" % t.flesch_score)
print("%7.2f <= Flesch-Kincaid score" % t.fleschkincaid_score)
print("%7.2f <= Gunning Fog score" % t.gunningfog_score)
print("%7.2f <= SMOG score" % t.smog_score)
print("%7.2f <= Dale-Chall score" % t.dalechall_score)
print("%7d <= number of words not on Dale-Chall list of words understood by 80%% of 4th graders" % t.notdalechall_count)
print("%7d <= number of words with three or more syllables" % t.polysyblword_count)
